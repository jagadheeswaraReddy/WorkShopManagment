<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

   
	<beans:bean id="ldapAuthProvider"
		class="org.springframework.security.ldap.authentication.ad.ActiveDirectoryLdapAuthenticationProvider">
		<beans:constructor-arg value="${ldap.domain}" />
		<beans:constructor-arg value="${ldap.url}" />
		<!-- <beans:constructor-arg value ="${ldap.searchfilter}"/>  -->
		<beans:property name="convertSubErrorCodesToExceptions"  value="true"/>
		<beans:property name="userDetailsContextMapper" ref="tdrUserDetailsContextMapper"/>
    	<beans:property name="useAuthenticationRequestCredentials" value="true"/>
	</beans:bean>
	
	<authentication-manager alias="authenticationManager" erase-credentials="true">
		<authentication-provider ref="ldapAuthProvider" >
		</authentication-provider>
	</authentication-manager>
   
	<http auto-config="true" entry-point-ref="LoginUrlAuthenticationEntryPoint"> 
	 	<custom-filter ref="mySecurityFilter" position="FIRST" />
		<!-- <intercept-url pattern="/admin/*" access="ROLE_USER" />
		<intercept-url pattern="/admin/*/*" access="ROLE_USER" /> -->
		<intercept-url pattern="/job/*/*" access="ROLE_USER" />
		<intercept-url pattern="/report/*/*" access="ROLE_USER" />
		<form-login login-page="/login.jsf" default-target-url="/admin/adminhomepage.jsf?faces-redirect=true"   authentication-failure-url="/login.jsf"/>
		<logout logout-success-url="/login.jsf" />			
	</http>	
 
 	<beans:bean id="mySecurityFilter"  class="com.agrobank.bft.authentication.handler.CustomUsernamePasswordAuthFilter">
		<beans:property name="authenticationManager" ref="authenticationManager"/>
		<beans:property name="authenticationSuccessHandler"	ref="successHandler"/>
		<beans:property name="authenticationFailureHandler" ref="failureHandler"/>
	</beans:bean>
	
	<beans:bean id="successHandler"
		class="org.springframework.security.web.authentication.SavedRequestAwareAuthenticationSuccessHandler">
		<beans:property name="defaultTargetUrl" value="/admin/adminhomepage.jsf?faces-redirect=true"/>
		<beans:property name="alwaysUseDefaultTargetUrl" value="true" />
	</beans:bean>
	<beans:bean id="failureHandler" class="org.springframework.security.web.authentication.SimpleUrlAuthenticationFailureHandler">
		<beans:property name="defaultFailureUrl" value="/login.jsf?login_error=true"/>
	</beans:bean>

	<beans:bean id="LoginUrlAuthenticationEntryPoint"
		class="org.springframework.security.web.authentication.LoginUrlAuthenticationEntryPoint">
		<beans:property name="loginFormUrl" value="/login.jsf" />
		<beans:property name="forceHttps" value="true" />
	</beans:bean>

	<beans:bean id="tdrUserDetailsContextMapper" class="com.agrobank.bft.authentication.handler.UserDetailsContextMapperImpl"/>
	 

</beans:beans>